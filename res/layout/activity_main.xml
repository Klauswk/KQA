<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimage"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btKanjis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Lista de Kanjis" 
        />

    <Button
        android:id="@+id/btTabela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btKanjis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:text="Tabela de Hiragana/Katakana" />

    <TextView
        android:id="@+id/tvKlaus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvIdioma"
        android:layout_centerHorizontal="true"
        android:text="Por Klaus" />

    <TextView
        android:id="@+id/tvIdioma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="idioma"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <GridView
        android:id="@+id/gvKanjisFavoritos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvKlaus"
        android:layout_alignLeft="@+id/btTabela"
        android:layout_below="@+id/btTabela"
        android:layout_marginTop="15dp"
        android:numColumns="3" >

    </GridView>

    <Button
        android:id="@+id/btOpcoes"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:drawable/ic_menu_info_details"
        />

</RelativeLayout>
