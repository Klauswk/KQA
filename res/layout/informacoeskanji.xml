<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/tvKanjiClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Class"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvKanjiGrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tvKanjiClass"
        android:layout_below="@+id/tvKanjiClass"
        android:text="Grade"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvKanjiStrokes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tvKanjiGrade"
        android:layout_below="@+id/tvKanjiGrade"
        android:text="Strokes"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvKanjiRadical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tvKanjiStrokes"
        android:layout_below="@+id/tvKanjiStrokes"
        android:text="Radical"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvKanjiTranslation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tvKanjiRadical"
        android:layout_below="@+id/tvKanjiRadical"
        android:text="Translation"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvKanjiKunReading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tvKanjiTranslation"
        android:layout_below="@+id/tvKanjiTranslation"
        android:text="Kun reading"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvKanjiKunTranslation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tvKanjiKunReading"
        android:layout_below="@+id/tvKanjiKunReading"
        android:text="Kun translation"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btFavoritar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvKanjiKunTranslation"
        android:layout_below="@+id/tvKanjiKunTranslation"
        android:text="Favoritar" />

</RelativeLayout>
